    "~/Content/plugins/material-datetimepicker/moment-with-locales.min.js",
    "~/Content/plugins/material-datetimepicker/bootstrap-material-datetimepicker.js",
    "~/Content/plugins/material-datetimepicker/datetimepicker.js",

    "~/Content/plugins/dropzone/dropzone.js",
    "~/Content/plugins/dropzone/dropzone-call.js",

    "~/Content/js/pages/ui/animations.js"
    )
}